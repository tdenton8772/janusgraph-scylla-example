# ScyllaDB Connection Configuration
# Copy this file to .env and update with your cloud ScyllaDB credentials

# ScyllaDB Host and Port
SCYLLA_HOST=your-scylla-cluster.scylladb.com
SCYLLA_PORT=9042

# ScyllaDB Authentication
SCYLLA_USERNAME=your_username
SCYLLA_PASSWORD=your_password

# ScyllaDB Keyspace
SCYLLA_KEYSPACE=janusgraph

# SSL Configuration (for cloud ScyllaDB)
SCYLLA_SSL_ENABLED=true
SCYLLA_SSL_TRUSTSTORE=/opt/janusgraph/conf/custom/truststore.jks
SCYLLA_SSL_TRUSTSTORE_PASSWORD=your_truststore_password

# For local development, use these settings instead:
# SCYLLA_HOST=localhost
# SCYLLA_PORT=9042
# SCYLLA_USERNAME=
# SCYLLA_PASSWORD=
# SCYLLA_SSL_ENABLED=false